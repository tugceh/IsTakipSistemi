
@{
    ViewBag.Title = "Takip";
    Layout = "~/Views/Shared/_LayoutMudur.cshtml";
}

<h2>Takip</h2>

<div class="container">
    <div class="jumbotron">
        @ViewBag.personel.personelAd

    </div>

    @foreach (var tekIs in ViewBag.isler)
    {
        <div class="card">
            <div class="card-header">@tekIs.isAd</div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item">Açıklama: @tekIs.isAciklama</li>
                    <li class="list-group-item">Tarih: @tekIs.isTarih</li>
                    <li class="list-group-item">İletilen: @tekIs.iletilenTarih</li>
                    <li class="list-group-item">Yapılan: @tekIs.yapilanTarih</li>
                    <li class="list-group-item">Durum: @tekIs.isDurum</li>
                </ul>

            </div>
        </div>
    }
</div>